{
  "name": "sfonsave",
  "displayName": "Sf On Save",
  "description": "On save of a SF file, run an SFDX deploy command",
  "version": "0.1.0",
  "publisher": "codefriar",
  "author": {
    "name": "Kevin Poorman",
    "email": "kjp@codefriar.com"
  },
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/codefriar/SfOnSave.git"
  },
  "bugs": {
    "url": "https://github.com/codefriar/SfOnSave/issues"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {},
  "configuration": {
    "type": "object",
    "title": "Salesforce On Save Configuration",
    "properties": {
      "SfOnSave.sfdxCommand": {
        "type": "string",
        "default": "sfdx force:source:deploy --sourcepath ",
        "description": "Command to run on save."
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.21",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  }
}
